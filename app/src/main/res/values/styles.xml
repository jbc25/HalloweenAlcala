<resources>


    <style name="ButtonHalloween">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/red_halloween</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/red_halloween</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
    </style>

    <style name="TextEditSlogan" parent="TextBase">
        <item name="android:gravity">center</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textCapSentences|textMultiLine|textNoSuggestions</item>
        <item name="android:textSize">45sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/nosifer</item>
    </style>
</resources>
