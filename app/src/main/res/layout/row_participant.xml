<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="8dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_participant"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <View
        android:id="@+id/view_filter"
        android:background="#9a410f0f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_participant"
        android:layout_alignBottom="@+id/img_participant" />

    <TextView
        android:id="@+id/tv_participant_name"
        style="@style/TextBase.White"
        android:layout_centerInParent="true"
        app:fontPath="fonts/ZombieQueen.ttf"
        android:textSize="24sp"
        android:gravity="center"/>
</RelativeLayout>