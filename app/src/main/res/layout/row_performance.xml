<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_time_performance"
            style="@style/TextBase.White"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_circle_red"
            android:gravity="center"
            android:textSize="28sp"
            app:fontPath="fonts/ZombieQueen.ttf" />


        <TextView
            android:id="@+id/tv_title_performance"
            style="@style/TextBase.White"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_time_performance"
            android:textSize="19sp"
            android:lineSpacingMultiplier="0.7"/>

        <TextView
            android:id="@+id/tv_subtitle_performance"
            style="@style/TextBase.White"
            app:fontPath="fonts/typewriter.ttf"
            android:layout_alignLeft="@+id/tv_title_performance"
            android:layout_below="@+id/tv_title_performance"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_place_performance"
            style="@style/TextBase.White"
            android:layout_gravity="right"
            android:layout_alignLeft="@+id/tv_title_performance"
            android:layout_below="@+id/tv_subtitle_performance"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            app:fontPath="fonts/Roboto-Light.ttf" />
    </RelativeLayout>



</LinearLayout>